    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "env": {"XONSH_DEBUG":"true"},
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: PyTest --flake8 current file",
            "type": "python",
            "request": "launch",
            "env": {"XONSH_DEBUG":"true"},
            "justMyCode": false,
            "program": "${env:VIRTUAL_ENV}/bin/pytest",
            "args": ["--flake8", "${file}"]
        },
        {
            "name": "Python: PyTest --flake8 test_aliases.py",
            "type": "python",
            "request": "launch",
            "env": {"XONSH_DEBUG":"true"},
            "justMyCode": false,
            "cwd": "/mnt/myd/dev/src/xonsh",
            "program": "${env:VIRTUAL_ENV}/bin/pytest",
            "args": ["--flake8", "tests/test_aliases.py", "xonsh/ply/ply/cpp.py"]
        },
        {
            "name": "Python: PyTest --flake8 *",
            "type": "python",
            "request": "launch",
            "env": {"XONSH_DEBUG":"true"},
            "justMyCode": false,
            "cwd": "/mnt/myd/dev/src/xonsh",
            "program": "${env:VIRTUAL_ENV}/bin/pytest",
            "args": ["--flake8"]
        }
    ]
}